<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../partials/head.ejs', title="movieDetails" ) %>

</head>

<body>
    <%- include ('../partials/header.ejs') %>
        <section id="bg-container">
            <img id="img-details" src=<%=`https://image.tmdb.org/t/p/w500${data.backdrop_path}`%>>
        </section>
        <section id="movie-info">
            <article>
                <h3>
                    <%=data.title %>
                </h3>
                <p>
                    <%=data.release_date %>
                </p>

                <p>
                    <% data.genres.forEach(element=> { %>
                        <li>
                            <%= element.name %>
                        </li>
                        <% }) %>
                </p>
                <h4>Plot Summary</h4>
                <p>
                    <%=data.overview %>
                </p>
            </article>
        </section>


</body>

</html>